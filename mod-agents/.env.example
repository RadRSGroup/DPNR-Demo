# ModAgents Environment Variables
# Copy to .env and fill in your values

# Application Settings
LOG_LEVEL=INFO
AGENT_MODE=production
PORT=8000
ENABLE_METRICS=false

# Redis Configuration (will be auto-set by Render)
REDIS_URL=redis://localhost:6379

# AI Model Configuration
OPENAI_API_KEY=your_openai_api_key_here
COHERE_API_KEY=your_cohere_api_key_here

# Assessment Configuration
CONFIDENCE_THRESHOLD=0.75
MAX_CONCURRENT_ASSESSMENTS=10

# Optional: Custom Model Endpoints
# CUSTOM_MODEL_ENDPOINT=https://your-custom-endpoint.com
# CUSTOM_MODEL_API_KEY=your_custom_key

# Security (Optional)
# SECRET_KEY=your-secret-key-for-jwt
# ALLOWED_HOSTS=your-domain.com,another-domain.com